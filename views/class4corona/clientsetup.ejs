<html>

<head>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const code = urlParams.get('session');
        const name = urlParams.get('name');

        function next() {
            window.location.replace('class?session=' + code + '&name=' + name);
        }

        navigator.mediaDevices.getUserMedia({
            audio: true
        }).then(function(stream) {
            localStream = stream
        }).catch(function(err) {
            alert("Microphone Permissions are needed")
        });
    </script>

</head>

<body>

    <div class="container text-center" style="height:100vh;">
        <div class="row h-100 align-items-center">
            <div class="col">
                <h1 class="h4 mb-3">Make sure to allow microphone permissions!</h1>
                <h1 class="lead mb-4">Your microphone is not used until you join the class</h1>
                <button class="btn btn-outline-primary" onclick="next()">Join Class</button>
            </div>
        </div>
    </div>

